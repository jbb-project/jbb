<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.jbb</groupId>
    <artifactId>jbb-bom</artifactId>
    <version>DEV-SNAPSHOT</version>

    <packaging>pom</packaging>

    <name>jBB Bill of Materials</name>
    <description>External libraries versions management</description>

    <properties>
        <!-- CORE LIBS -->
        <guava.version>19.0</guava.version>
        <commons.lang3.version>3.4</commons.lang3.version>
        <lombok.version>1.16.8</lombok.version>

        <!-- TESTING & MOCKING TOOLS -->
        <junit.version>4.12</junit.version>
        <assertj.version>3.4.1</assertj.version>
        <assertj.guava.version>3.0.0</assertj.guava.version>
        <mockito.version>1.10.19</mockito.version>
        <powermock.version>1.6.5</powermock.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <!-- CORE LIBS -->
            <dependency>
                <!-- included as dependency in parent pom (available for all modules) -->
                <groupId>com.google.guava</groupId>
                <artifactId>guava</artifactId>
                <version>${guava.version}</version>
            </dependency>
            <dependency>
                <!-- included as dependency in parent pom (available for all modules) -->
                <groupId>org.apache.commons</groupId>
                <artifactId>commons-lang3</artifactId>
                <version>${commons.lang3.version}</version>
            </dependency>
            <dependency>
                <!-- included as dependency in parent pom (available for all modules) -->
                <groupId>org.projectlombok</groupId>
                <artifactId>lombok</artifactId>
                <version>${lombok.version}</version>
            </dependency>

            <!-- TESTING & MOCKING TOOLS -->
            <dependency>
                <!-- included as dependency in parent pom (available for all modules during testing) -->
                <groupId>junit</groupId>
                <artifactId>junit</artifactId>
                <version>${junit.version}</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <!-- included as dependency in parent pom (available for all modules during testing) -->
                <groupId>org.assertj</groupId>
                <artifactId>assertj-core</artifactId>
                <version>${assertj.version}</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <!-- included as dependency in parent pom (available for all modules during testing) -->
                <groupId>org.assertj</groupId>
                <artifactId>assertj-guava</artifactId>
                <version>${assertj.guava.version}</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <!-- included as dependency in parent pom (available for all modules during testing) -->
                <groupId>org.mockito</groupId>
                <artifactId>mockito-core</artifactId>
                <version>${mockito.version}</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <!-- included as dependency in parent pom (available for all modules during testing) -->
                <groupId>org.powermock</groupId>
                <artifactId>powermock-module-junit4</artifactId>
                <version>${powermock.version}</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <!-- included as dependency in parent pom (available for all modules during testing) -->
                <groupId>org.powermock</groupId>
                <artifactId>powermock-api-mockito</artifactId>
                <version>${powermock.version}</version>
                <scope>test</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

</project>