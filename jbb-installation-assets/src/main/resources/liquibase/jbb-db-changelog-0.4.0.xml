<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <!-- TABLE: JBB_ADMINISTRATORS -->
    <changeSet author="baart92" id="0.4.0-1">
        <createTable tableName="JBB_ADMINISTRATORS">
            <column name="ID" type="BIGINT(19)">
                <constraints nullable="false"/>
            </column>
            <column name="CREATE_DATE_TIME" type="TIMESTAMP"/>
            <column name="UPDATE_DATE_TIME" type="TIMESTAMP"/>
            <column name="VERSION" type="INT(10)"/>
            <column name="MEMBER_ID" type="BIGINT(19)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet author="baart92" id="0.4.0-2">
        <addPrimaryKey columnNames="ID" constraintName="JBB_ADMINISTRATORS-PK"
                       tableName="JBB_ADMINISTRATORS"/>
    </changeSet>

    <!-- TABLE: JBB_ADMINISTRATORS_AUDIT -->
    <changeSet author="baart92" id="0.4.0-3">
        <createTable tableName="JBB_ADMINISTRATORS_AUDIT">
            <column name="ID" type="BIGINT(19)">
                <constraints nullable="false"/>
            </column>
            <column name="REV" type="INT(10)">
                <constraints nullable="false"/>
            </column>
            <column name="REVTYPE" type="TINYINT(3)"/>
            <column name="MEMBER_ID" type="BIGINT(19)"/>
        </createTable>
    </changeSet>
    <changeSet author="baart92" id="0.4.0-4">
        <addPrimaryKey columnNames="ID, REV" constraintName="JBB_ADMINISTRATORS_AUDIT-PK"
                       tableName="JBB_ADMINISTRATORS_AUDIT"/>
    </changeSet>
    <changeSet author="baart92" id="0.4.0-5">
        <createIndex indexName="JBB_ADMINISTRATORS_AUDIT.REV-IDX"
                     tableName="JBB_ADMINISTRATORS_AUDIT">
            <column name="REV"/>
        </createIndex>
    </changeSet>
    <changeSet author="baart92" id="0.4.0-6">
        <addForeignKeyConstraint baseColumnNames="REV" baseTableName="JBB_ADMINISTRATORS_AUDIT"
                                 constraintName="JBB_ADMINISTRATORS_AUDIT.REV-FK" deferrable="false"
                                 initiallyDeferred="false" onDelete="RESTRICT" onUpdate="RESTRICT"
                                 referencedColumnNames="ID" referencedTableName="REVISIONINFO"/>
    </changeSet>

    <!-- TABLE: JBB_PASSWORDS -->
    <changeSet author="baart92" id="0.4.0-7">
        <createTable tableName="JBB_PASSWORDS">
            <column name="ID" type="BIGINT(19)">
                <constraints nullable="false"/>
            </column>
            <column name="CREATE_DATE_TIME" type="TIMESTAMP"/>
            <column name="UPDATE_DATE_TIME" type="TIMESTAMP"/>
            <column name="VERSION" type="INT(10)"/>
            <column name="APPLICABLE_SINCE" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="MEMBER_ID" type="BIGINT(19)"/>
            <column name="PASSWORD" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet author="baart92" id="0.4.0-8">
        <addPrimaryKey columnNames="ID" constraintName="JBB_PASSWORDS-PK"
                       tableName="JBB_PASSWORDS"/>
    </changeSet>

    <!-- TABLE: JBB_PASSWORDS_AUDIT -->
    <changeSet author="baart92" id="0.4.0-9">
        <createTable tableName="JBB_PASSWORDS_AUDIT">
            <column name="ID" type="BIGINT(19)">
                <constraints nullable="false"/>
            </column>
            <column name="REV" type="INT(10)">
                <constraints nullable="false"/>
            </column>
            <column name="REVTYPE" type="TINYINT(3)"/>
            <column name="APPLICABLE_SINCE" type="TIMESTAMP"/>
            <column name="MEMBER_ID" type="BIGINT(19)"/>
            <column name="PASSWORD" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet author="baart92" id="0.4.0-10">
        <addPrimaryKey columnNames="ID, REV" constraintName="JBB_PASSWORDS_AUDIT-PK"
                       tableName="JBB_PASSWORDS_AUDIT"/>
    </changeSet>
    <changeSet author="baart92" id="0.4.0-11">
        <createIndex indexName="JBB_PASSWORDS_AUDIT.REV-IDX"
                     tableName="JBB_PASSWORDS_AUDIT">
            <column name="REV"/>
        </createIndex>
    </changeSet>
    <changeSet author="baart92" id="0.4.0-12">
        <addForeignKeyConstraint baseColumnNames="REV" baseTableName="JBB_PASSWORDS_AUDIT"
                                 constraintName="JBB_PASSWORDS_AUDIT.REV-FK" deferrable="false"
                                 initiallyDeferred="false" onDelete="RESTRICT" onUpdate="RESTRICT"
                                 referencedColumnNames="ID" referencedTableName="REVISIONINFO"/>
    </changeSet>
</databaseChangeLog>
